function v = bezier_der(b,t)
% Funkcija bezier_der s pomo;jo de Casteljaujevaga algoritma izracuna
% tangentni vektor dane Bezierjeve krivulje pri paramatru t.

n = length(b)-1;
B = @(j) nchoosek(n,j).*t.^i*(1-t).^(n-i-1);
v = [0;0];

for i = 1:n
   
    v =  v + (b(:,i+1) - b(:,i)).*B(i)
    
end

end